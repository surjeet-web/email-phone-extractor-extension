{
  "manifest_version": 3,
  "name": "Simple Email Extractor",
  "version": "1.0",
  "description": "Simple email extractor for debugging",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "simple-popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["simple-content.js"]
    }
  ]
}